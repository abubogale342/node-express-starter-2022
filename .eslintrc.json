{
    "parserOptions": {
        "ecmaVersion": 2020,
        "experimentalObjectRestSpread": true,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "warn",
        "require-jsdoc": ["warn", {
            "require": {
                "FunctionDeclaration": true,
                "MethodDefinition": true,
                "ClassDeclaration": true,
                "ArrowFunctionExpression": true,
                "FunctionExpression": true
            }
        }]
    },
    "extends": [
        "eslint:recommended"
    ],
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    }
}